<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.category %></p>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %>
</div>
  <hr>

<div class="container">
<h1>Add a new review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5], as: :select %>
  <%= f.input :content, class: "form-control" %>
  <%= f.submit "Add a review", class: "btn btn-primary" %>
<% end %>
<%= link_to "Go back to the restaurant", restaurant_path(@restaurant), class: "btn btn-primary" %>
</div>

<div class="container">
  <h1>Reviews</h1>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  <% @reviews.each do |review| %>
    <ul class="list-unstyled">
      <li><%= review.content %></li>
      <p>My rate: <%= review.rating %></p>
    </ul>
  <% end %>
</div>

